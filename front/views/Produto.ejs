    <div class="dashboard"> 
        <label for="storeSelector">Select Store:</label>
        <select id="storeSelector">
            <option value="0">All Stores</option>
    
        </select> 
        <div id="chartContainer" style="height: 300px; width: 100%;"></div>
        <br>
        <br>
        <br>
        <div id="barChartContainer"></div>
     </div> 

    

    <script
    src="https://code.jquery.com/jquery-3.7.1.js"
    integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4="
    crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
   

    <script>
        const jsonData = <%- JSON.stringify(resultado[0]) %>;

        // Organize os dados e encontre o último preço de cada loja
        var lastPrices = {};
        jsonData.lojas.forEach(function (loja) {
            var storeName = loja.StoreName;
            var price = loja.Price;
            lastPrices[storeName] = price;
        });

        var dataPoints = [];
        for (var storeName in lastPrices) {
            dataPoints.push({ label: storeName, y: lastPrices[storeName] });
        }

        // Crie um gráfico de barras
        var chart = new CanvasJS.Chart("barChartContainer", {
            animationEnabled: true,
            backgroundColor: null,
            title: {
                text: "Preços por Loja",
            },
            axisX: {
                title: "Loja",
                lineColor: "rgba(105,105,105,.8)",
                gridColor: "rgba(105,105,105,.8)",
                type: "area",
            },
            axisY: {
                title: "Preço (€)",
                color: "rgba(255,12,32,.5)",
                minimum: 0 // Defina o valor mínimo no eixo Y para 0
            },
            data: [{
                type: "column",
                dataPoints: dataPoints
            }]
        });

        chart.render();
    </script>
    <script>
        // Dados JSON com os preços
        const data = <%- JSON.stringify(resultado[0]) %>;
        const vinho = <%- JSON.stringify(vinho) %>[0];
        console.log(data);
        // Extrair nomes únicos das lojas
        const storeNames = [...new Set(data.lojas.map(loja => loja.StoreName))];
        var select = document.getElementById("storeSelector");
        var i = 1;
        storeNames.forEach(element => {
            var option = document.createElement("option");

            // Set the value and text of the option
            option.value = i++;
            option.text = element;

            // Append the option to the select element
            select.appendChild(option);
        });
        // Preparar dados para o gráfico
        const chartData = storeNames.map(storeName => ({
            type: "line",
            showInLegend: true,
            name: storeName,
            dataPoints: data.lojas
                .filter(loja => loja.StoreName === storeName)
                .map(loja => ({
                    x: new Date(loja.Date),
                    y: loja.Price
                }))
        }));

        // Configuração do gráfico
        const chart1 = new CanvasJS.Chart("chartContainer", {
            animationEnabled: true,
            backgroundColor: null,
            title: {
                text: "Evolução dos Preços por Loja"
            },
            axisX: {
                title: "Data"
            },
            axisY: {
                title: "Preço (€)"
            },
            toolTip: {
                shared: true
            },
            legend: {
                cursor: "pointer"
            },
            data: chartData
        });
        var ean = document.getElementById("ean");
        var brand = document.getElementById("brand");
        var subbrand = document.getElementById("subbrand");
        var capacidade = document.getElementById("capacidade");
        var nome = document.getElementById("nome");

        ean.innerHTML = vinho.EAN;
        brand.innerHTML = vinho.Brand;
        subbrand.innerHTML = vinho.Subrand;
        capacidade.innerHTML = vinho.capacity + ' ML';
        nome.innerHTML = vinho.name;
        // Renderizar o gráfico
        document.getElementById("wineimg").src = "/images/" + vinho.EAN + ".jpg";
        const allData = chart1.options.data;
        console.log(allData);
        document.getElementById('storeSelector').addEventListener('change', function () {
            console.log(this.value)
            if(this.value != 0)
            {
                const selectedStore = this.value - 1;
                var datas = [chartData[selectedStore]];
                chart1.options.data = datas;
            }
            else
            {
                console.log('aa');
                chart1.options.data = allData;
            }
            chart1.render();
        });
        chart1.render();
    </script>
