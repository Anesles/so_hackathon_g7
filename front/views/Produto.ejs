            margin-bottom: 10px;
        }
        .price {
            font-size: 18px;
        }
        .date {
            color: #777;
        }
        /* Estilo para o título na topbar */


        .dashboard {
            margin-top: 100px;
            margin-bottom: 200px;
            margin-right: 100px;
            margin-left: 80px;
            border: 5px solid rgba(255, 145, 0, 0.808);
            border-radius: 20px;
}

        .wine-container {
            display: flex;
            flex-wrap: wrap;
            border: none;
            box-shadow: 0px 0px 0px rgba(0, 0, 0, 0.3);
            justify-content: center;
            border: 2px solid rgba(255, 166, 51, 0.493);
            border-radius: 20px;
            border-color: #fbead4;
            background-color: #ebe6e0;
            color: #f3e3ca;
            font-family: 'Montserrat', sans-serif;
        }

        .wine-image {
            max-width: 500px; /* Define o tamanho máximo da imagem */
            border-radius: 1rem;
            overflow: hidden;
            cursor: pointer;
}

        .wine-details {
            text-align: center;
			color: black;
			padding: 10px;
			background-color: rgba(255, 255, 255, 0.2);
			border-radius: 5px;
			margin: 0 10px;
			/* Maior espaçamento entre os preços das lojas */
			flex: 1;
			max-width: fit-content;
			transition: transform 0.3s, background-color 0.3s; /* Add smooth transitions for transform and background-color */
        }

        h2 {
			font-size: 26px;
			/* Texto do nome do vinho maior e mais expressivo */
			font-weight: bold;
			/* Texto em negrito */
			margin-bottom: 15px;
			/* Maior espaçamento abaixo do nome do vinho */
        }

        #nome {
            color: black;
            justify-content: center;
        }

        #chartContainer {
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <div class="top-bar-container" style="background-image: url('/images/wine-background.jpeg');background-size: cover;background-position: center;">
        <div class="topbar">
            <div class="logo-left">
                <img src="/images/sogrape-logo.svg" alt="Sogrape-logo" style="">
            </div>
            <h1 style="padding: 10px; font-size: 90px; text-align: center; font-family: 'Montserrat', sans-serif;">Sogrape Dashboard</h1>
            <div class="logo-right">
                <img src="/images/logo-42.svg" alt="42 Porto">
            </div>
        </div>
        <br>
        <br>
    </div>
    	<div id="navigation" class="button-bar" style="font-family: 'Montserrat', sans-serif">
		<span>Tabelas</span>
		<label class="switch slider-container">
   			<input type="checkbox" id="toggle-switch" checked>
    		<span class="slider round"></span>
		</label>
		<span>Cards</span>
		<a href="/" class="button button-navbar">Dashboard</a>
		<a href="/addProduto" class="button button-navbar">Adicionar Produto</a>
		<a href="/removeProduto" class="button button-navbar">Remover Produto</a>
	</div>

    <div class="dashboard">
        <div class="wine-container">
            <img id="wineimg" src="" onerror="this.src = '/images/noimg.jpg'" class="wine-image" style="height: 500px;width: auto;">
                
            <div class="wine-details">
                <h1 id="nome">Nome Vinho</h1>
                <h2>EAN:</h2> <p id="ean">546579</p>
                <h2>Marca:</h2> <p id="brand">546579</p>
                <h2>Sub-Marca:</h2> <p id="subbrand">546579</p>
                <h2>Capacidade:</h2> <p id="capacidade">546579</p>
            </div>
        </div>
    
        <div id="chartContainer" style="height: 300px; width: 100%;"></div>

    </div>

    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
   
    <script>
        // Dados JSON com os preços
        const data = <%- JSON.stringify(resultado[0]) %>;
        const vinho = <%- JSON.stringify(vinho) %>[0];
        console.log(vinho);
        // Extrair nomes únicos das lojas
        const storeNames = [...new Set(data.lojas.map(loja => loja.StoreName))];

        // Preparar dados para o gráfico
        const chartData = storeNames.map(storeName => ({
            type: "line",
            showInLegend: true,
            name: storeName,
            dataPoints: data.lojas
                .filter(loja => loja.StoreName === storeName)
                .map(loja => ({
                    x: new Date(loja.Date),
                    y: loja.Price
                }))
        }));

        // Configuração do gráfico
        const chart = new CanvasJS.Chart("chartContainer", {
            title: {
                text: "Evolução dos Preços por Loja"
            },
            axisX: {
                title: "Data"
            },
            axisY: {
                title: "Preço (€)"
            },
            toolTip: {
                shared: true
            },
            legend: {
                cursor: "pointer"
            },
            data: chartData
        });
        var ean = document.getElementById("ean");
        var brand = document.getElementById("brand");
        var subbrand = document.getElementById("subbrand");
        var capacidade = document.getElementById("capacidade");
        var nome = document.getElementById("nome");

        ean.innerHTML = vinho.EAN;
        brand.innerHTML = vinho.Brand;
        subbrand.innerHTML = vinho.Subrand;
        capacidade.innerHTML = vinho.capacity + ' ML';
        nome.innerHTML = vinho.name;
        // Renderizar o gráfico
        document.getElementById("wineimg").src = "/images/" + vinho.EAN + ".jpg";

        chart.render();
    </script>
</body>
</html>
