<!DOCTYPE html>
<html>
<head>
    <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
        <link rel="icon" href="airplane_icon_257083.ico">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;1,200&display=swap" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="/css/dashboard.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">    <title>Formulário de Vinho</title>
    <style>
        body {
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
        }

        h1 {
            color: #91630d; /* Cor da Sogrape */
            text-align: center;
            font-family: 'Montserrat', sans-serif;
        }

        form {
            background-color: #fff;
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        label {
            display: block;
            margin-top: 10px;
            color: #333;
        }

        input[type="text"],
        input[type="number"] {
            width: 95%;
            padding: 2.6%;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        button {
            border-color: #91630d;
            background-color: #91630d; /* Cor da Sogrape */
            color: #fff;
            border: none;
            padding: 10px 20px;
            margin-top: 15px;
            border-radius: 3px;
            cursor: pointer;
        }

        button:hover {  
            background-color: #8b7345; /* Cor mais escura da Sogrape para hover */
        }
    </style>
</head>
<body>
    <div class="top-bar-container" style="background-image: url('/images/wine-background.jpeg');background-size: cover;background-position: center;">
        <div class="topbar">
            <div class="logo-left">
                <img src="/images/sogrape-logo.svg" alt="Sogrape-logo" style="">
            </div>
            <h1 style="font-size: 90px; text-align: center; font-family: 'Montserrat', sans-serif;">Sogrape Dashboard</h1>
            <div class="logo-right">
                <img src="/images/logo-42.svg" alt="42 Porto">
            </div>
        </div>
        <div id="navigation" class="button-bar" style="font-family: 'Montserrat', sans-serif">
            <a href="/" class="button button-navbar">Dashboard</a>
            <a href="/addProduto" class="button button-navbar active">Adicionar Produto</a>
            <a href="/removeProduto" class="button button-navbar">Remover Produto</a>
	    </div>
    </div>
    <h1>Adicionar produto</h1>
    <form action="/submit" method="POST" onsubmit="return validateForm()">
        <label for="nomeVinho">Nome do Vinho:</label>
        <input type="text" id="nomeVinho" name="nomeVinho" required>

        <label for="capacidade">Capacidade (ml):</label>
        <input type="number" id="capacidade" name="capacidade" required>

        <label for="ean">EAN:</label>
        <input type="text" id="ean" name="ean" required>

        <label for="marca">Marca:</label>
        <input type="text" id="marca" name="marca" required>

        <label for="submarca">Submarca:</label>
        <input type="text" id="submarca" name="submarca" required>

        <button type="submit">Enviar</button>
    </form>
    <script>
        function isEANSogrape(ean) {
            return ean.startsWith('56010120');
        }
        function validateForm() {
            const eanInput = document.getElementById("ean");
            const ean = eanInput.value;

            if (!isEANSogrape(ean)) {
                const confirmAdd = confirm("Este item não pertence à Sogrape. Tem certeza de que deseja adicionar ao carrinho?");
                if (!confirmAdd) {
                    return false; // Impede o envio do formulário
                }
            }
            return true; // Permite o envio do formulário
        }
    </script>
</body>
</html>
